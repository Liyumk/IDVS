<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/backgroundVector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:padding="0dp"
        app:srcCompat="@drawable/ic_top_background"
        tools:ignore="VectorDrawableCompat" />


    <androidx.cardview.widget.CardView
        android:layout_width="500dp"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="25dp"
        app:cardElevation="15dp"
        android:id="@+id/profile_card"
        android:background="@color/white"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="250dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/profile_container">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="250dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/profile_pic"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:contentDescription="@string/woman_seaching"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/welcomeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="Student"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:text="ID Number"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:text="Can get a Meal"

                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_card"
        app:cardElevation="22dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="0dp"
        android:background="@color/white"
        android:layout_marginBottom="30dp"


        >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


                <TextView
                    android:id="@+id/detail_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Date"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>


                <TextView
                    android:id="@+id/breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:text="Breakfast"
                    android:textColor="@color/black"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_alignTop="@id/breakfast"
                    android:text="Lunch"
                    android:textColor="@color/black"
                    android:textSize="20sp" />





                <TextView
                    android:id="@+id/dinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/lunch"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Dinner"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/breakfast_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/breakfast"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="250dp"

                     />
                <CheckBox
                    android:id="@+id/lunch_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/lunch"
                    android:layout_alignTop="@id/breakfast_check"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="250dp"

                    />
                <CheckBox
                    android:id="@+id/dinner_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/breakfast"
                    android:layout_alignTop="@id/lunch_check"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="250dp"

                    />


            </RelativeLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>




</RelativeLayout>